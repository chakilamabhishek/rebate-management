{
  "swagger": "2.0",
  "info": {
    "title": "Rebate Management System API",
    "version": "1.0.0",
    "description": "API documentation for the rebate management system."
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/api/rebate-programs": {
      "post": {
        "summary": "Create a Rebate Program",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "program_name": { "type": "string" },
                "rebate_percentage": { "type": "number" },
                "start_date": { "type": "string", "format": "date" },
                "end_date": { "type": "string", "format": "date" },
                "eligibility_criteria": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully created"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/api/transactions": {
      "post": {
        "summary": "Submit a Transaction",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "amount": { "type": "number" },
                "transaction_date": { "type": "string", "format": "date" },
                "rebate_program_id": { "type": "integer" }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully created"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/api/rebate-claims": {
      "post": {
        "summary": "Claim a Rebate",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "transaction_id": { "type": "integer" },
                "claim_amount": { "type": "number" },
                "claim_status": { "type": "string" },
                "claim_date": { "type": "string", "format": "date" }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully claimed"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      },
      "get": {
        "summary": "Get Rebate Claims",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "required": true,
            "type": "string",
            "format": "date"
          },
          {
            "name": "endDate",
            "in": "query",
            "required": true,
            "type": "string",
            "format": "date"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/api/rebate-claims/calculate/{transactionId}": {
      "get": {
        "summary": "Calculate Rebate",
        "parameters": [
          {
            "name": "transactionId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully calculated"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/api/auth/token": {
      "post": {
        "summary": "Generate JWT Token",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Token generated successfully"
          },
          "400": {
            "description": "User information is required"
          }
        }
      }
    }
  }
}